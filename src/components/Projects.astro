---
import KotlinIcon from "./icons/Kotlin.astro";
import JavaIcon from "./icons/Java.astro";
import PaperMCIcon from "./icons/PaperMC.astro";
import MinecraftIcon from "./icons/Minecraft.astro";
import GitHubIcon from "./icons/GitHub.astro";
import LinkPill from "./LinkPill.astro";
import AstroIcon from "./icons/AstroIcon.astro";
import TailwindIcon from "./icons/Tailwind.astro";
import HTMLIcon from "./icons/HTML.astro";
import CSSIcon from "./icons/CSS.astro";
import JavaScriptIcon from "./icons/JavaScript.astro";

const TAGS = {
  ASTRO: {
    name: "Astro",
    class: "bg-purple-900/20 text-white",
    icon: AstroIcon,
  },
  TAILWINDCSS: {
    name: "Tailwind CSS",
    class: "bg-purple-900/20 text-white",
    icon: TailwindIcon,
  },
  HTML: {
    name: "HTML",
    class: "bg-purple-900/20 text-white",
    icon: HTMLIcon,
  },
  CSS: {
    name: "CSS",
    class: "bg-purple-900/20 text-white",
    icon: CSSIcon,
  },
  JAVASCRIPT: {
    name: "JavaScript",
    class: "bg-purple-900/20 text-white",
    icon: JavaScriptIcon,
  },
  KOTLIN: {
    name: "Kotlin",
    class: "bg-purple-900/20 text-white",
    icon: KotlinIcon,
  },
  JAVA: {
    name: "Java",
    class: "bg-orange-600/20 text-white",
    icon: JavaIcon,
  },
  PAPERMC: {
    name: "PaperMC",
    class: "bg-cyan-400/20 text-white",
    icon: PaperMCIcon,
  },
  MINECRAFT: {
    name: "Minecraft",
    class: "bg-green-500/20 text-white",
    icon: MinecraftIcon,
  },
};
const PROJECTS = [
  {
    title: "Porfolio-Adrian",
    description:
      "Este es mi porfolio personal creado usando el framework Astro y TailwindCSS, junto con HTML, CSS, JavaScript, y JSX.",
    link: "",
    github: "https://github.com/AdrianOliva2/Porfolio-Adrian",
    image: "/projects/CapturaPorfolio.png",
    tags: [
      TAGS.ASTRO,
      TAGS.TAILWINDCSS,
      TAGS.HTML,
      TAGS.CSS,
      TAGS.JAVASCRIPT,
    ],
  },
  {
    title: "PerWorldWarps",
    description:
      "Plugin para crear teletransportes únicos para cada mundo de minecraft hecho en en lenguaje de programación Kotlin para servidores que usan la librería PaperMC.",
    link: "https://github.com/AdrianOliva2/PerWorldWarps/releases/latest",
    github: "https://github.com/AdrianOliva2/PerWorldWarps",
    image: "/projects/PerWorldWarpsLogo.png",
    tags: [TAGS.KOTLIN, TAGS.JAVA, TAGS.PAPERMC, TAGS.MINECRAFT],
  },
];
---

{
  PROJECTS.map(({ image, title, description, tags, link, github }) => (
    <article>
      {link ? (
        <a href={link} target="_blank" rel="noopener norreferer">
          <h3 class="text-2xl font-semibold text-yellow-200 mb-2">{title}</h3>
        </a>
      ) : (
        <h3 class="text-2xl font-semibold text-yellow-200 mb-2">{title}</h3>
      )}

      <p class="text-lg mb-4 text-pretty">{description}</p>
      <ul class="flex flex-col gap-y-2 w-32 md:flex-row md:gap-x-2 md:w-full md:gap-y-0">
        {tags.map((tag) => (
          <li>
            <span
              class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}
            >
              <tag.icon class="size-4" />
              {tag.name}
            </span>
          </li>
        ))}
      </ul>
      <img
        class="size-48 rounded-lg my-2 shadow-2xl shadow-white/10"
        src={image}
        alt={`Logo del proyecto ${title}`}
      />
      {github && (
        <div class="flex gap-x-2 flex-row mb-10">
          <LinkPill href={github}>
            <GitHubIcon class="size-4" />
            Repositorio
          </LinkPill>
        </div>
      )}
    </article>
  ))
}
